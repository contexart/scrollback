extends layout
block append styles
	link(rel="stylesheet", href="/css/login.css")

block append scripts

	script(type='text/javascript')
		window.scrollback = {host: 'http://' + location.host};
	script(src="/socket.io/socket.io.js")
	script(src="/sdk/emitter.js")
	script(src="/sdk/client.js")
	script(src="/sdk/profile.js")
	

	div#loading
		h1 Please Wait
		
	div#logged(class="hidden")
		form#profile
			center
				div#pictureFrame(title="Click to change")
					img#picture
				br
				label
					span.label Username:
					input#username
				br
				br
				button.major#submit(type="button",onclick="update()") Create account
				button.major#logoutBtn(type="button",onclick="logout()") Logout
	div#error(class="hidden")
		h1	error